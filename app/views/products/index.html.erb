<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h2>List products</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Price</th>
					</tr>
					<tbody>
					<% @products.each do |product| %>
						<tr>
							<td><%= product.name %></td>
							<td><%= product.price %></td>
						</tr>
					<% end %>
					</tbody>
				</thead>
			</table>
		</div>
	</div>
</div>